<plugin>

	<extension point="org.eclipse.debug.core.launchConfigurationTypes">
		<launchConfigurationType
			id="ilg.gnumcueclipse.debug.gdbjtag.pyocd.launchConfigurationType"
			modes="debug,run"
			name="%launchConfig.name"
			public="true" />
	</extension>

	<extension point="org.eclipse.debug.core.launchDelegates">
		<launchDelegate
			delegate="org.eclipse.embedcdt.debug.gdbjtag.pyocd.dsf.LaunchConfigurationDelegate"
			delegateDescription="%launchDelegate.jtagDsf.description"
			id="ilg.gnumcueclipse.debug.gdbjtag.pyocd.core.dsfLaunchDelegate"
			modes="debug,run"
			name="%launchDelegate.jtagDsf.name"
			sourceLocatorId="org.eclipse.cdt.debug.core.sourceLocator"
			sourcePathComputerId="org.eclipse.cdt.debug.core.sourcePathComputer"
			type="ilg.gnumcueclipse.debug.gdbjtag.pyocd.launchConfigurationType">
		</launchDelegate>
	</extension>

	<extension point="org.eclipse.debug.ui.launchConfigurationTypeImages">
		<launchConfigurationTypeImage
			configTypeID="ilg.gnumcueclipse.debug.gdbjtag.pyocd.launchConfigurationType"
			icon="icons/obj16/c_app.gif"
			id="ilg.gnumcueclipse.debug.gdbjtag.pyocd.launchConfigurationTypeImage" />
	</extension>

	<extension point="org.eclipse.debug.ui.launchConfigurationTabGroups">
		<launchConfigurationTabGroup
			class="org.eclipse.embedcdt.debug.gdbjtag.pyocd.ui.TabGroupLaunchConfiguration"
			id="ilg.gnumcueclipse.debug.gdbjtag.pyocd.launchConfigurationTabGroup"
			type="ilg.gnumcueclipse.debug.gdbjtag.pyocd.launchConfigurationType" />
	</extension>

	<extension point="org.eclipse.cdt.debug.gdbjtag.core.JTagDevice">
		<device
			class="org.eclipse.embedcdt.debug.gdbjtag.pyocd.JTagDevice"
			id="ilg.gnumcueclipse.debug.gdbjtag.pyocd.core.jtagdevice"
			name="%JTagDevice.generic.name">
		</device>
	</extension>

	<extension point="org.eclipse.cdt.debug.gdbjtag.core.JTagDevice">
		<device
			class="org.eclipse.embedcdt.debug.gdbjtag.pyocd.JTagDevice"
			id="ilg.gnumcueclipse.debug.gdbjtag.pyocd.core.jtagdevice"
			name="%JTagDevice.deprecated.name">
		</device>
	</extension>

	<extension point="org.eclipse.ui.preferencePages">
		<page
			category="org.eclipse.embedcdt.core.ui.preferences.mcu"
			class="org.eclipse.embedcdt.debug.gdbjtag.pyocd.ui.preferences.WorkspaceMcuPage"
			id="org.eclipse.embedcdt.debug.gdbjtag.pyocd.workspacePreferencePage"
			name="%preferences.workspaceMcu">
		</page>
		<page
			category="org.eclipse.embedcdt.core.ui.preferences.mcu"
			class="org.eclipse.embedcdt.debug.gdbjtag.pyocd.ui.preferences.GlobalMcuPage"
			id="org.eclipse.embedcdt.debug.gdbjtag.pyocd.globalPreferencePage"
			name="%preferences.globalMcu">
		</page>
	</extension>
	<extension point="org.eclipse.ui.propertyPages">
		<page
			category="org.eclipse.embedcdt.core.ui.properties.mcu"
			class="org.eclipse.embedcdt.debug.gdbjtag.pyocd.ui.properties.ProjectMcuPage"
			id="org.eclipse.embedcdt.debug.gdbjtag.pyocd.projectPropertiesPage"
			name="%properties.mcu">
			<filter
				name="projectNature"
				value="org.eclipse.cdt.core.cnature">
			</filter>
			<enabledWhen>
				<and>
					<instanceof value="org.eclipse.core.resources.IProject">
					</instanceof>
					<test forcePluginActivation="true" property="ilg.gnumcueclipse.managedbuild.cross.isGnuMcu">
					</test>
				</and>
			</enabledWhen>
		</page>
	</extension>

	<extension point="org.eclipse.core.runtime.preferences">
		<initializer
			class="org.eclipse.embedcdt.debug.gdbjtag.pyocd.preferences.DefaultPreferenceInitializer">
		</initializer>
	</extension>

</plugin>
